<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/theme_color</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/status_color</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>
    </style>

    <style name="AppTheme" parent="@style/AppBaseTheme"/>

    <style name="MyTablayoutStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyFabStyle" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_marginBottom">28dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>

</resources>
